{
  "extends": ["tslint-config-standard"],
  "files": ["**.test.ts", "**.test.js"],
  "rules": {
    "no-string-throw": false,
    "no-eval": false,
    "one-variable-per-declaration": false,
    "space-before-function-paren": false,
    "variable-name": false,
    "trailing-comma": false,
    "no-unused-expression": false,
    "curly": false,
    "one-line": false,
    "no-empty": false,
    "ter-indent": false
  },
  "jsRules": {
    "space-before-function-paren": false
  },
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "**/lib/**",
      "**/dist/**",
      "**/coverage/**"
    ]
  }
}
